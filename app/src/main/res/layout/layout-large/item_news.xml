<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_cardview_news"
    app:cardElevation="@dimen/cardElevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_cardview">

        <TextView
            android:id="@+id/tvTitleItemNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_title_textview_itemnews"
            android:textSize="@dimen/textsize_title_news"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPubdateItemNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textSize="@dimen/textsize_pubdate_news"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imgItemNews"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvDescriptionItemNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/color_description_textview_itemnews"
            android:textSize="@dimen/textsize_description_news" />
    </LinearLayout>
</android.support.v7.widget.CardView>